# Convex (set by `npx convex dev` in .env.local)
CONVEX_DEPLOYMENT=dev:your-deployment-name
CONVEX_DEPLOY_KEY=your-deploy-key
CONVEX_URL=https://your-deployment.convex.cloud
# UI needs this (Vite exposes only VITE_* to client). Copy CONVEX_URL here after convex dev.
VITE_CONVEX_URL=https://your-deployment.convex.cloud
# ARM/legacy compatibility mode (true = legacy-pref reads, false = ARM instance-pref reads)
ARM_COMPAT_MODE=true

# API Server
API_PORT=3000
API_SECRET=your-api-secret-change-in-production
NODE_ENV=development

# Workers
WORKER_CONCURRENCY=5
HEARTBEAT_INTERVAL_MS=30000
LOOP_DETECTION_INTERVAL_MS=60000

# OpenClaw Gateway
OPENCLAW_GATEWAY_URL=http://localhost:8080

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Slack (optional)
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info

# Budget Defaults (USD)
DEFAULT_INTERN_DAILY_BUDGET=2
DEFAULT_SPECIALIST_DAILY_BUDGET=5
DEFAULT_LEAD_DAILY_BUDGET=12
