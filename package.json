{
  "name": "mission-control",
  "version": "0.9.0",
  "private": true,
  "type": "module",
  "description": "Mission Control for OpenClaw - Autonomous agent orchestration and observability",
  "author": "Jarrett West",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "node packages/telegram-bot/dist/index.js",
    "dev": "concurrently \"npx convex dev\" \"turbo run dev --filter=mission-control-ui\"",
    "dev:ui": "pnpm --filter mission-control-ui dev",
    "build": "pnpm --filter @mission-control/telegram-bot build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup": "npm install && npm run build",
    "convex:dev": "npx convex dev",
    "convex:deploy": "npx convex deploy",
    "convex:seed": "npx convex run seed:seedV0",
    "agent:run": "pnpm --filter @mission-control/agent-runner run",
    "agent:run:scout": "AGENT_NAME=Scout AGENT_ROLE=INTERN AGENT_TYPES=CUSTOMER_RESEARCH,SEO_RESEARCH pnpm --filter @mission-control/agent-runner run",
    "agent:run:scribe": "AGENT_NAME=Scribe AGENT_ROLE=INTERN AGENT_TYPES=DOCS,CONTENT pnpm --filter @mission-control/agent-runner run"
  },
  "dependencies": {
    "convex": "^1.31.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
